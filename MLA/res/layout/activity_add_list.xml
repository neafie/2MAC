<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

<TableLayout 
    android:id="@+id/table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
	    
   <TableRow>
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/tv_fname"
       android:gravity="left"
       android:text="Achievment Name"
       android:textSize="20sp"
       />
  
   <EditText
       android:id="@+id/et_aname"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:ems="10"
       android:inputType="textCapWords"
       android:layout_weight="1"
       >
	
       
       <requestFocus />
   </EditText>
   </TableRow>
   
 	
   <TableRow>
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/tv_desc"
       android:gravity="left"
       android:text="Description"
       android:textSize="20sp"
       />
  
   <EditText
       android:id="@+id/et_desc"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:ems="10"
       android:inputType="text"
       android:layout_weight="1"
       >
	
       
       <requestFocus />
   </EditText>
   </TableRow>
   
   
   <TableRow>
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/tv_points"
       android:gravity="left"
       android:text="Points"
       android:textSize="20sp"
       />
  
   <EditText
       android:id="@+id/et_points"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:ems="10"
       android:inputType="number"
       android:layout_weight="1"
       >
	
       
       <requestFocus />
   </EditText>
   </TableRow>
   
   <TableRow>
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/tv_numb"
       android:gravity="left"
       android:text="Completions Needed"
       android:textSize="20sp"
       />
  
   <EditText
       android:id="@+id/et_numb"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:ems="10"
       android:inputType="number"
       android:layout_weight="1"
       >
	
       
       <requestFocus />
   </EditText>
   </TableRow>
      
   <TableRow>
       <Button
        android:id="@+id/buttonach"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Add Acheivment" 
        android:onClick="AddList"/>
       
       
   </TableRow>
</TableLayout>
</ScrollView>
