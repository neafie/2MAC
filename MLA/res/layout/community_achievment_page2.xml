<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEE6E9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AchievementPage" >

    <TextView
        android:id="@+id/tv_points_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_points_s"
        android:layout_alignBottom="@+id/tv_points_s"
        android:layout_toRightOf="@+id/tv_points_s"
        android:text="100" />

    <TextView
        android:id="@+id/tv_desc_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_desc_s"
        android:layout_toRightOf="@+id/tv_desc_s"
        android:text="" />

    <TextView
        android:id="@+id/tv_numb_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_com_s"
        android:layout_alignBottom="@+id/tv_com_s"
        android:layout_toRightOf="@+id/tv_com_s"
        android:text="1" />

    <TextView
        android:id="@+id/tv_com2_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_com2_s"
        android:layout_alignBottom="@+id/tv_com2_s"
        android:layout_toRightOf="@+id/tv_com2_s"
        android:text="0" />

    <TextView
        android:id="@+id/tv_desc_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:text="Description: " />

    <TextView
        android:id="@+id/tv_desc_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_desc_s"
        android:layout_toRightOf="@+id/tv_desc_s"
        android:text="" />
    
    <TextView
        android:id="@+id/tv_points_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_desc_s"
        android:text="Points: " />

    <TextView
        android:id="@+id/tv_com_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_points_s"
        android:text="Completions Needed: " />

    <TextView
        android:id="@+id/tv_com2_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_com_s"
        android:text="Completions: " />

    <TextView
        android:id="@+id/tv_time_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_com2_s"
        android:text="Time Remaining: N/A" />

    

    <Button
        android:id="@+id/b_addcomp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="AddComp" 
        />


    <Button
        android:id="@+id/b_addphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b_addcomp"
        android:layout_alignBottom="@+id/b_addcomp"
        android:layout_toRightOf="@+id/b_addcomp"
        android:onClick="takePhoto"
        android:text="AddPhoto" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    


</RelativeLayout>
