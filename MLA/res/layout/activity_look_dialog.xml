<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LookDialog" >

    <TextView
        android:id="@+id/tv_points_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_points_s"
        android:layout_alignBottom="@+id/tv_points_s"
        android:layout_toRightOf="@+id/tv_points_s"
        android:text="POI" />

    <TextView
        android:id="@+id/tv_desc_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_desc_s"
        android:layout_toRightOf="@+id/tv_desc_s"
        android:text="DESC" />

    <TextView
        android:id="@+id/tv_desc_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Description: " />

    <TextView
        android:id="@+id/tv_points_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_desc_s"
        android:layout_below="@+id/tv_desc_s"
        android:layout_marginTop="15dp"
        android:text="Points: " />

    <TextView
        android:id="@+id/tv_numb_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_com_s"
        android:layout_alignBottom="@+id/tv_com_s"
        android:layout_toRightOf="@+id/tv_com_s"
        android:text="NUMB" />

    <TextView
        android:id="@+id/tv_com_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_points_s"
        android:layout_below="@+id/tv_points_i"
        android:layout_marginTop="49dp"
        android:text="Completions Needed: " />

    <TextView
        android:id="@+id/tv_com2_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_numb_i"
        android:layout_alignLeft="@+id/tv_com_s"
        android:layout_marginBottom="16dp"
        android:text="Completions: " />

    <TextView
        android:id="@+id/tv_com2_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_com2_s"
        android:layout_alignBottom="@+id/tv_com2_s"
        android:layout_toRightOf="@+id/tv_com2_s"
        android:text="COMP2" />

    <Button
        android:id="@+id/b_addcomp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_desc_i"
        android:layout_toRightOf="@+id/tv_numb_i"
        android:text="AddComp" />

</RelativeLayout>